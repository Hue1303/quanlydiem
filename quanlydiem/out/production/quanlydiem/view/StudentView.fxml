<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StudentController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <AnchorPane prefHeight="80.0" style="-fx-background-color: #2c3e50;">
                    <children>
                        <Label layoutX="30.0" layoutY="25.0" text="KẾT QUẢ HỌC TẬP" textFill="WHITE" AnchorPane.leftAnchor="30.0">
                            <font><Font name="System Bold" size="24.0" /></font>
                        </Label>
                        <Label fx:id="lblXinChao" alignment="CENTER_RIGHT" layoutX="450.0" layoutY="32.0" text="Xin chào: ..." textFill="#ecf0f1" AnchorPane.rightAnchor="30.0">
                            <font><Font name="System Italic" size="14.0" /></font>
                        </Label>
                    </children>
                </AnchorPane>

                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #ecf0f1; -fx-background-radius: 5;">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                    <children>
                        <Label text="Chọn Học Kỳ:">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Label>

                        <ComboBox fx:id="cbHocKy" prefWidth="150.0" promptText="-- Chọn --" />

                        <Region HBox.hgrow="ALWAYS" />

                        <Label fx:id="lblDiemCaNam" text="Điểm Tổng Kết Năm: ..." textFill="#c0392b">
                            <font><Font name="System Bold" size="16.0" /></font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
                </HBox>

                <TableView fx:id="tableDiemHS" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colMon" prefWidth="150.0" text="Môn Học" />
                        <TableColumn fx:id="colMieng" prefWidth="80.0" text="Miệng" />
                        <TableColumn fx:id="col15p" prefWidth="80.0" text="15 Phút" />
                        <TableColumn fx:id="col1Tiet" prefWidth="80.0" text="1 Tiết" />
                        <TableColumn fx:id="colThi" prefWidth="80.0" text="Thi HK" />
                        <TableColumn fx:id="colTB" prefWidth="100.0" text="TB Môn HK" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </VBox.margin>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>