<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
        <SplitPane dividerPositions="0.4" prefHeight="160.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>

                <AnchorPane minHeight="0.0" minWidth="0.0" styleClass="left-pane">
                    <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../image/logo.png" />
                                    </image>
                                </ImageView>
                                <Label styleClass="school-name" text="HANOI - SÓC SƠN" textFill="WHITE">
                                    <font><Font name="System Bold" size="22.0" /></font>
                                </Label>
                                <Label text="SECONDARY SCHOOL" textFill="#bdc3c7">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>

                <AnchorPane minHeight="0.0" minWidth="0.0" styleClass="login-pane">
                    <children>
                        <VBox alignment="CENTER" fillWidth="false" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <Label text="ĐĂNG NHẬP" textFill="#2c3e50">
                                    <font><Font name="System Bold" size="28.0" /></font>
                                </Label>
                                <Label text="Vui lòng nhập thông tin để tiếp tục" textFill="#7f8c8d" />

                                <Separator prefWidth="320.0">
                                    <VBox.margin><Insets bottom="10.0" top="10.0" /></VBox.margin>
                                </Separator>

                                <VBox alignment="CENTER_LEFT" prefWidth="320.0" spacing="5.0">
                                    <children>
                                        <Label text="Tài khoản / Mã HS" textFill="#34495e">
                                            <font><Font name="System Bold" size="13.0" /></font>
                                        </Label>
                                        <TextField fx:id="txtUser" prefHeight="40.0" promptText="Nhập mã học sinh hoặc User giáo viên" styleClass="text-field" />
                                    </children>
                                </VBox>

                                <VBox alignment="CENTER_LEFT" prefWidth="320.0" spacing="5.0">
                                    <children>
                                        <Label text="Mật khẩu" textFill="#34495e">
                                            <font><Font name="System Bold" size="13.0" /></font>
                                        </Label>
                                        <PasswordField fx:id="txtPass" prefHeight="40.0" promptText="Mật khẩu hoặc Ngày sinh (yyyy-mm-dd)" styleClass="text-field" />
                                    </children>
                                </VBox>

                                <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#handleLogin" prefHeight="45.0" prefWidth="320.0" styleClass="button-login" text="TRUY CẬP HỆ THỐNG">
                                    <VBox.margin><Insets top="15.0" /></VBox.margin>
                                </Button>

                                <Label fx:id="lblError" textFill="#e74c3c" wrapText="true">
                                    <font><Font name="System Italic" size="13.0" /></font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>

            </items>
        </SplitPane>
    </children>
</AnchorPane>